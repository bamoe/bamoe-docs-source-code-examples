package com.ibm.bamoe.decisions.embedded; 

import com.ibm.bamoe.decisions.embedded.Applicant;
import com.ibm.bamoe.decisions.embedded.LoanApplication;

rule "Underage"
  salience 15
  agenda-group "applicationGroup"
  when
    $application : LoanApplication( $applicantId: applicantId )
    Applicant( id == $applicantId && age < 21 )
  then
    $application.setApproved( false );
    $application.setExplanation( "Underage" );
end
